<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view3"
    android:layout_gravity="center"
    android:fontFamily="sans-serif-medium"
    android:orientation="vertical">

    <TextView
        android:id="@+id/appbar"
        android:layout_width="229dp"
        android:layout_height="52dp"
        android:layout_x="107dp"
        android:layout_y="396dp"
        android:background="#DA70D6"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="80 CAD per Night"
        android:textColor="@color/white"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="-2dp"
        android:layout_y="108dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Details and Booking"
        android:textColor="#DA70D6"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:layout_x="0dp"
        android:layout_y="162dp"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/renaissancemontrealdowntownhotel"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="132dp" />
    <TextView
        android:id="@+id/cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DA70D6"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="hotels.com"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="117dp"
        android:layout_y="613dp"
        android:fontFamily="sans-serif-medium"
        android:text="BOOK NOW"
        android:textColor="@color/white"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="771dp" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="39dp"
        android:layout_y="528dp"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:inputType="text"
        android:hint="Enter the no. of Customer"
        android:textColor="#DA70D6"
        android:textSize="30dp"
        android:gravity="center"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="605dp" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="39dp"
        android:layout_y="465dp"
        android:ems="10"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:inputType="text"
        android:hint="Enter the no. of Nights"
        android:textColor="#DA70D6"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="666dp" />


</AbsoluteLayout>